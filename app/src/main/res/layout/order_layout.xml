<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="phone number"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total price"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/order_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/order_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adrres"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/order_total_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/order_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/show_order_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:text="Show this Order Products"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

    </RelativeLayout>

</RelativeLayout>