<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegistirationActivity">

    <ImageView
        android:id="@+id/registration_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller"/>

    <TextView
        android:id="@+id/registration_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registration_image"
        android:text="Seller Register Form"
        android:textSize="22sp"
        android:textColor="@color/holoGreen"
        android:textAlignment="center"
        android:textStyle="bold"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/registration_title"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <EditText
                android:id="@+id/seller_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_name"
                android:layout_marginTop="10dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <EditText
                android:id="@+id/seller_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_phone_number"
                android:layout_marginTop="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <EditText
                android:id="@+id/seller_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_email"
                android:layout_marginTop="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <EditText
                android:id="@+id/seller_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_password"
                android:layout_marginTop="10dp"
                android:hint="Shop-Business Address"
                android:inputType="text"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/seller_register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_shop_address"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:text="Register"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/seller_have_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_register_btn"
                android:layout_marginTop="30dp"
                android:background="@color/holoGreen"
                android:text="Already Have An Account"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>